{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "target": "es2017",
    "declaration": false,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ]
}
